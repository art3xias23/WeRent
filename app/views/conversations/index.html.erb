<div class="row">
	<div class="col-md-12">
		
		<div class="panel panel-default">
			<div class="panel-heading">Your conversations</div>
			<div class="panel-body">
				<div class="container">
					<% @conversations.each do |conversation| %>
						<% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %>

						<%= link_to conversation_messages_path(conversation) do %>

							<div class="row conversation">
								<div class="col-md-2">
									<%= image_tag gravatar_url(other), class: "img-circle avatar-medium" %>
								</div>
								<div class="col-md-2">
									<%= other.fullname %><br>
									<% messages = conversation.messages %>
									<%= messages.last.message_time unless messages.empty? %>
								</div>
								<div class="col-md-8">
									<% messages = conversation.messages %>
									<%= messages.last.content unless messages.empty? %>
								</div>
							</div>

						<% end %>
					<% end %>
				</div>
			</div>
		</div>

	</div>
</div>