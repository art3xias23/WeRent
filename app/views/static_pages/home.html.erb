<%provide(:title, "Home")%>
<%= form_tag search_path, method: :get do %>
	<div class="row">
		<div class="col-md-6">
			<%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= submit_tag "Search", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>

<br>

<div class="text-center">
	<h2>The heart of the Balcans</h2>
	<p>Discover new, inspiring places In Bulgaria.</p>
</div>

<br>

<div class="row">
	<div class="col-md-4 col-sm-12">
		<a href="http://localhost:3000/search?utf8=%E2%9C%93&search=sofia">
			<div class="discovery-card" style="background-image: url('/assets/Sofia.jpg')">
				<div class="va-container">
					<div class="va-middle text-center">
						<h2><strong>Sofia</strong></h2>
					</div>
				</div>
			</div>
		</a>
	</div>

	<div class="col-md-4 col-sm-6">
		<a href="http://localhost:3000/search?utf8=%E2%9C%93&search=plovdiv">
			<div class="discovery-card" style="background-image: url('/assets/Plovdiv.jpg')">
				<div class="va-container">
					<div class="va-middle text-center">
						<h2><strong>Plovdiv</strong></h2>
					</div>
				</div>
			</div>
		</a>
	</div>

	<div class="col-md-4 col-sm-6">
		<a href="http://localhost:3000/search?utf8=%E2%9C%93&search=varna">
			<div class="discovery-card" style="background-image: url('/assets/Varna.jpg')">
				<div class="va-container">
					<div class="va-middle text-center">
						<h2><strong>Varna</strong></h2>
					</div>
				</div>
			</div>
		</a>
	</div>
</div>

<br>

<div class="text-center">
	<<h2>Available</h2>
	<p>This is what our members are currently offering.</p
</div>

<br>

<div class="row">
	
		<% @rooms.each do |room| %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading preview">
					<%= image_tag room.pictures[0].image.url(:medium) if room.pictures.length > 0 %>
				</div>
				<div class="panel-body">
					<%= image_tag gravatar_url(room.user), class: "img-circle avatar-small" %>&nbsp;
					<%= link_to room.listing_name, room %>
				</div>
			</div>
		</div>

	<% end %>
</div>

<script>
	$(function() {
		$("#start_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});

		$("#end_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);
			}
		});
	})


</script>
